<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splash">


    <fragment
        android:id="@+id/splash"
        android:name="com.example.navigation.fragments.Splash"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splash_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="false"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true"/>
    </fragment>


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.navigation.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_accountFragment2"
            app:destination="@id/accountFragment2" />
        <action
            android:id="@+id/action_homeFragment_to_dialogFragment"
            app:destination="@id/dialogFragment" />
    </fragment>




    <fragment

        android:id="@+id/loginFragment"
        android:name="com.example.navigation.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splash"
            app:popUpToInclusive="true"/>
    </fragment>


    <fragment
        android:id="@+id/accountFragment2"
        android:name="com.example.navigation.fragments.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account"
        >
        <deepLink
            android:id="@+id/deepLink"
            app:action="ACTION_VIEW"
            app:uri="myapp://navigation.com/welcome"/>
    </fragment>

    <dialog
        android:id="@+id/dialogFragment"
        android:name="com.example.navigation.fragments.dialogFragment"
        android:label="fragment_dialog"
         >
        <action
            android:id="@+id/action_dialogFragment_to_homeFragment"
            app:destination="@id/homeFragment" />

        <argument
            android:name="dialogFragmentTitle"
            android:defaultValue="Welcome"
            app:argType="string"/>
    </dialog>

    <action android:id="@+id/action_global_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/splash"
        app:popUpToInclusive="true"/>
</navigation>