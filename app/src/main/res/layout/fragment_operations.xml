<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".operations"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/teal_200">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/addFragment"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_marginLeft="30dp"
            />
        <Button
            android:id="@+id/replaceFragment"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Replace "
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/hideFragment"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Hide"
            android:layout_marginLeft="30dp"
            />
        <Button
            android:id="@+id/showFragment"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="show"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <Button
            android:id="@+id/removeFragment"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout_fragment"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rotate your screen for question 4 "
        android:layout_gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColorHighlight="@color/yellow"/>
</LinearLayout>