<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
<EditTextPreference
    android:title="User Name"
    android:summary="Enter your username"
    android:key="edit_pref"
    />

    <SwitchPreference
        android:title="Turn On/OFF Hotspot"
        android:summary="use to turn your hotspot ON/OFF"
        android:key="switch_pref"/>

    <CheckBoxPreference
        android:title="checkbox"
        android:summary="This is a checkbox preference"
        android:key="check_pref"
        android:defaultValue="false"/>

    <ListPreference
        android:title="Ringtone"
        android:summary="Select your ringtone"
        android:key="list_pref"
        android:entries="@array/Ringtone"
        android:entryValues="@array/Ringtone"/>
</PreferenceScreen>